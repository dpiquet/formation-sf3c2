{% extends 'base.html.twig' %}

{% block title %} | {{ 'title.home'|trans }}{% endblock %}

{% block content %}
    <h2>{{ 'subtitle.home'|trans }}</h2>


    <form action="/login_check" method="post">
        <label for="username">{{ 'app.username'|trans }}</label>
        <input type="text" id="username" name="my_login" value="" />

        <label for="password">{{ 'app.password'|trans }}</label>
        <input type="password" id="password" name="my_secret" />

        <button type="submit">{{ 'app.login'|trans }}</button>
    </form>
{% endblock %}
