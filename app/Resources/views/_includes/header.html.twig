<div id="header">
    <div id="logo">
        <h1>
            <a href="{{ path('homepage') }}">{{ 'title.hangman'|trans }}</a>
        </h1>
    </div>
    <div id="menu">
        <ul>
            <li class="first current_page_item">
                <a href="{{ path('game_index') }}">{{ 'menu.game'|trans }}</a>
            </li>
            <li>
                <a href="/signup">{{ 'menu.register'|trans }}</a>
            </li>
            <li>
                {% if app.user %}
                    <a href="{{ path('logout') }}">{{ 'menu.logout'|trans }}</a>
                {% else %}
                    <a href="{{ path('homepage') }}">{{ 'menu.login'|trans }}</a>
                {% endif %}
            </li>
            <li>
                <a href="{{ path('contact') }}">{{ 'menu.contact'|trans }}</a>
            </li>
        </ul>
        <br class="clearfix" />
    </div>
</div>
